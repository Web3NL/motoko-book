{
  "type": "module",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "motoko": "^3.3.0",
    "tsc": "^2.0.4",
    "vite": "^4.2.0"
  },
  "scripts": {
    "dev": "mdbook serve",
    "build:book": "vite build && mdbook build",
    "domain": "cp -r domain/.well-known/ book/ && cp domain/.ic-assets.json book/",
    "sitemap": "mdbook-sitemap-generator -d motoko-book.dev -o book/sitemap.xml",
    "build": "npm run build:book && npm run domain && npm run sitemap"
  },
  "dependencies": {
    "@dfinity/auth-client": "^1.2.0"
  }
}
